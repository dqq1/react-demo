{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        // "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.umi/*"],
            "@packages": ["packages/*"]
        },
        "experimentalDecorators": true
    },
    "include": [
        "./typings.d.ts",
        "packages/**/*.tsx",
        "packages/**/*.ts",
        "docs/**/*.ts",
        "docs/**/*.tsx"
    ],
    "exclude": ["node_modules", "lib", "es", "dist", "typings"]
}
